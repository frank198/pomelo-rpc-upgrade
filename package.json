{
  "name": "pomelo-rpc-upgrade",
  "version": "3.0.0",
  "description": "pomelo rpc",
  "repository": "https://github.com/frank198/pomelo-rpc-upgrade.git",
  "license": "MIT",
  "dependencies": {
    "async": ">=2.6.2",
    "crc": "^3.8.0",
    "mqtt-connection": "3.1.0",
    "pomelo-loader-upgrade": "*",
    "pomelo-logger-upgrade": "^2.x",
    "@grpc/proto-loader": "^0.4.0",
    "grpc": "^1.19.0",
    "thrift": "^0.12.0"
  },
  "devDependencies": {
    "mocha": "^6.0.2",
    "should": "^13.2.3"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "comma-style": "error",
      "consistent-this": [
        "error",
        "_this"
      ],
      "indent": [
        "error",
        4,
        {
          "SwitchCase": 1,
          "VariableDeclarator": 2
        }
      ],
      "keyword-spacing": "error",
      "no-buffer-constructor": "warn",
      "no-console": "off",
      "no-multi-spaces": "error",
      "func-call-spacing": "error",
      "no-trailing-spaces": "error",
      "quotes": [
        "error",
        "single"
      ],
      "semi": "error",
      "space-before-blocks": "error",
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "space-infix-ops": "error",
      "space-unary-ops": "error",
      "no-var": "warn",
      "prefer-const": "warn",
      "strict": [
        "error",
        "global"
      ]
    }
  }
}
